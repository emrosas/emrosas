---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import emrosas from '../assets/emrosas.svg'
---

<header class="flex items-center px-page py-4 justify-between">
  <a href="/" class="flex flex-col gap-1">
    <Image src={emrosas} alt="Logo" class="w-40"/>
    <h1 class="font-regular text-xs">Erick Mireles Rosas</h1>
  </a>
  <div class="flex gap-6 items-center">
    <ul class="flex gap-4 items-center">
      <li><a href="https://www.linkedin.com/in/emrosas/" target="_blank" class="flex items-center gap-1 opacity-80 hover:opacity-100 transition"><Icon name="linkedIn"/>Erick Mireles</a></li>
      <li><a href="https://github.com/emrosas" target="_blank" class="flex items-center gap-1 opacity-80 hover:opacity-100 transition"><Icon name="github"/>emrosas</a></li>
    </ul>
    <a href="/contact" class="px-4 py-2 text-light-1 bg-brand-1 rounded-lg">Contact</a>
  </div>
</header>
