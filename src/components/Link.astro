---
import { Icon } from 'astro-icon/components'

interface Props {
	text: string
	href: string
	icon?: string
	newWindow?: boolean
}

const { text, href, icon, newWindow = false } = Astro.props
---

<a
	href={href}
	target={newWindow ? '_blank' : '_self'}
	class="flex items-center gap-1 rounded-lg border border-brand-1 bg-opacity-15 bg-gradient-to-br from-brand-2 to-brand-1 px-4 py-2 text-light-1 transition-all duration-300 hover:bg-opacity-25 hover:px-6"
>
	<span>{text}</span>
	{icon && <Icon name={icon} />}
</a>
