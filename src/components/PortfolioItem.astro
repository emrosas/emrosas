---
//Component import
import { Image } from 'astro:assets';

const { src, alt, title, client, double } = Astro.props;
---

<figure class={double}>
	<div class="image-holder">
		<Image 
			src={src} 
			alt={alt} 
			class={'image'}
			quality={100}
		/>
	</div>
    <div class="content">
        <h3>{title}</h3>
        <p>{client}</p>
    </div>
</figure>

<style>
    figure {
		display: flex;
		flex-direction: column;
		gap: var(--su1);
		transition: all 450ms cubic-bezier(0.22, 1, 0.36, 1) 100ms;
	}

	figure:hover > .image-holder > .image {
		transform: scale(1.05);
	}

	.image-holder {
		width: 100%;
		min-height: 32rem;
		position:relative;
		overflow: hidden;
	}

	.image {
		position: absolute;
		inset: 0;
		transition: all 450ms cubic-bezier(0.22, 1, 0.36, 1) 100ms;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.content {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	p {
		font-weight: 300;
		font-size: 1rem;
	}
    .double-column {
		grid-column: span 2;
	}

	@media only screen and (max-width: 600px) {
		.double-column {
			grid-column: span 1;
		}
	}
</style>