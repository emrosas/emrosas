---
import { Image } from 'astro:assets';
import Button from './Button.astro';

interface Props {
    title: string;
    description: string;
    image: any;
    href: string;
}

const { title, description, image, href } = Astro.props;
---

<li class="flex items-center gap-4 dashed outlined-holder">
    <Image src={image} alt={title} class=' w-40 h-24 object-cover rounded-2xl' />
    <div class=" flex flex-col gap-2 flex-grow">
        <h3>{title}</h3>
        <p class=" text-xs">{description}</p>
    </div>
    <Button href={href} text='View' icon='arrow-diagonal' />
</li>