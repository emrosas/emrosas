---
import { Image } from 'astro:assets'

const { slug, data } = Astro.props
const { name, shortDescription, image } = data
---

<li class="group relative cursor-pointer list-none">
	<a href={`/projects/${slug}`} class="peer relative z-10 flex items-center gap-2" data-navlink>
		<Image
			src={image.src}
			alt={image.alt}
			class="size-20 rounded-md object-cover"
			width={120}
			height={120}
		/>
		<div class="flex flex-col gap-1">
			<h3 class="text-sm">{name}</h3>
			<p class="line-clamp-2 text-xs font-light text-light-2">{shortDescription}</p>
		</div>
	</a>
	<span
		aria-hidden="true"
		class="absolute -inset-2 z-0 rounded-lg border border-transparent bg-light bg-opacity-0 transition duration-200 ease-out group-hover:bg-opacity-5 peer-aria-current:border-brand/50 peer-aria-current:bg-brand/15 group-hover:peer-aria-current:bg-brand/20"
	></span>
</li>
