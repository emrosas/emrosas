---
import ProjectWrapper from './ProjectWrapper.astro'
import { Image } from 'astro:assets'

const { name, description, src } = Astro.props
---

<ProjectWrapper>
	<div class="flex items-center gap-2">
    <Image src={src} alt={name} class="size-20 rounded-sm object-cover" width={120} height={120}/>
		<div class="flex flex-col gap-1">
			<h3 class="text-sm">{name}</h3>
			<p class="text-xs font-light text-light-2">{description}</p>
		</div>
	</div>
</ProjectWrapper>
