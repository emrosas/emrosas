---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://use.typekit.net/qzl6zaz.css">
		<link rel="stylesheet" href="global.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navigation/>
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	:root {
		/* Color Values */
		--light-2:#F6E4CD;
		--dark-1: #10003D;

		/* Sizing Values */
		--pp1: 2.5rem;
		--su1: 1.5rem;
		--su2: 2.5rem;
		--su3: 5rem;
		--su4: 10rem;
	}

	@media only screen and (max-width: 600px) {
		:root {
			--pp1: 1.5rem;
		}
	}
	html {
		font-family: itc-avant-garde-gothic-pro, sans-serif;
		background: var(--light-2);
		color: var(--dark-1);
		scroll-behavior: smooth;
	}

	body {
		background-image: url('/bg-lines.svg');
		background-size: contain;
	}

	@media only screen and (max-width: 600px) {
		body {
			background-image: url('/bg-lines-mobile.svg');
		}
	}



	* {
		margin: unset;
	}

	h1 {
		font-size: clamp(5rem, 10vw + 1rem,  9rem);
		font-weight: 500;
		line-height: 100%;
	}

	h2, .fs2 {
		font-size: 3rem;
		font-weight: 500;
	}

	h3 {
		font-size: 1.5rem;
		font-weight: 500;
	}

</style>
