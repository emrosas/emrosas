---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Erick Mireles | Portfolio">
	<main>
		<header>
			<div class="container hero-container">
				<div class="comp-wrapper">
					<div class="comp-tag">
						&lt;Front End Developer /&gt;
					</div>
					<div class="comp-holder">
						<div class="comp-element">
							<h1>Building Creative Web Experiences</h1>
						</div>
						<div class="comp-element"><p>I combine graphic design, animation and web developement to create immersive websites and applications.</p></div>
					</div>
				</div>
				<a href="#commercial" class="work-button">See work â†“</a>
			</div>
		</header>
		<section id="commercial">
			<div class="container">
				<h2>Commercial</h2>
				<p>
					Here are some of the commercial projects I've worked on.
				</p>
			</div>
		</section>
		<section>
			<div class="container">
				<h2>Projects</h2>
				<p>
					Here are some of the side projects I've worked on.
				</p>
			</div>
		</section>
		<Footer />
	</main>
</Layout>
<style is:global>
	.comp-wrapper {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: start;
	}
	.comp-tag {
		padding: 0.5rem;
		background-color: hsla(var(--brand-2), 0.35);
		font-weight: 300;
		border-top: 1px solid hsla(var(--brand-2), 0.75);
		border-left: 1px solid hsla(var(--brand-2), 0.75);
		border-right: 1px solid hsla(var(--brand-2), 0.75);
		margin-left: 1rem;
		color: hsl(var(--brand-1));
		font-size: 1rem;
	}
	.comp-holder {
		display: flex;
		flex-direction: column;
		align-items: start;
		background-color: hsla(var(--brand-2), 0.1);
		padding: 1rem;
		border: 1px solid hsla(var(--brand-2), 0.75);
		text-align: left;
	}
	.comp-element {
		padding: 1rem;
		border: 1px solid hsla(var(--brand-2), 0.75);
	}

</style>

<style>
	header {
		height: 95vh;
		display: flex;
	}
	.hero-container {
		display: grid;
		grid-template-columns: 1.2fr 1fr;
	}
	.container {
		padding-top: 4rem;
		padding-bottom: 4rem;
	}
	.work-button {
		padding: 0.5rem;
		font-family: var(--font-mono);
		font-weight: 300;
		color: hsl(var(--brand-1));
		background-color: hsla(var(--brand-2), 0.1);
		border: 1px solid hsla(var(--brand-2), 0.75);
		position: absolute;
		bottom: 2rem;
		left: 2rem;
		text-decoration: none;
	}
	.work-button:hover {
		background-color: hsla(var(--brand-2), 0.5);
		border: 1px solid transparent;
	}
</style>
