---
// Component imports
import Layout from '../layouts/Layout.astro'
import ProjectCard from '../components/ProjectCard.astro'
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'

// Content Collection Imports
import { getCollection, type CollectionEntry } from 'astro:content'
const projects = await getCollection('projects', ({ data }) => !data.draft)
const sortedProjects = projects.sort(
	(a: CollectionEntry<'projects'>, b: CollectionEntry<'projects'>) =>
		a.data.sortOrder - b.data.sortOrder
)

// Asset imports
import me from '../assets/me.png'
---

<Layout
	title="Erick Mireles | Web Designer & Developer"
	description="Building creative digital experiences by combining graphic design, full-stack development and animation."
>
	<div class="p-page md:pr-double">
		<Image
			src={me}
			alt="A picture of me"
			aria-hidden="true"
			class="pointer-events-none absolute top-0 left-0 -z-10 h-full w-full object-cover opacity-30 blur-[100px] md:translate-y-[-35%] md:opacity-15"
		/>
		<div
			class="border-light/15 relative z-20 flex flex-col items-center gap-8 border-b border-dashed pb-16 text-center md:flex-row md:items-start md:text-left"
		>
			<!-- Profile Image -->
			<Image src={me} alt="Erick Mireles" class="size-60 shrink-0 rounded-xl object-cover" />
			<div class="flex flex-col items-center gap-2 md:items-start">
				<div
					class="border-brand bg-brand/10 text-brand flex items-center gap-2 rounded-full border py-1 pr-4 pl-3 text-xs"
				>
					<!-- Ping Dot Animation -->
					<div class="relative size-2">
						<div class="bg-brand absolute inset-px rounded-full"></div>
						<div class="bg-brand absolute inset-0 animate-ping rounded-full opacity-50"></div>
					</div>
					<span>Available for work</span>
				</div>
				<h1 class="text-title leading-tight font-medium">Erick Mireles</h1>
				<p
					class="clamp(0.75rem,1vw+0.35rem,1rem); text-light-2 max-w-prose leading-relaxed font-light"
				>
					With 5 years of experience in graphic design, web design, and front-end development, I am
					a 25-year-old professional combining technical and problem solving skills to craft
					compelling web applications that solve real-world problems.
				</p>
				<!-- Technology logos -->
				<div class="mt-4 flex flex-wrap justify-center gap-4 md:justify-start">
					<Icon name="logos/figma" class="size-8" />
					<Icon name="logos/astro" class="size-8" />
					<Icon name="logos/react" class="size-8" />
					<Icon name="logos/svelte" class="size-8" />
					<Icon name="logos/tailwind" class="size-8" />
					<Icon name="logos/git" class="size-8" />
					<Icon name="logos/supabase" class="size-8" />
					<Icon name="logos/go" class="size-8" />
				</div>
			</div>
		</div>
		<ul class="gap-page grid grid-cols-[repeat(auto-fit,minmax(240px,1fr))] py-16 md:pb-0">
			{sortedProjects.map((project: CollectionEntry<'projects'>) => <ProjectCard {...project} />)}
		</ul>
	</div>
</Layout>
